<script type="text/javascript">
    $(document).ready(function () {
        $("#barcodeform").submit(function (e) {
            e.preventDefault();
            var barcode = $("#barcode").val();
            $("#codbarras").val(barcode);

            $("#barcode").val("");

            var datos=new FormData();  //generando un obj de un formulario que se va a crear virtualmente
            var solicitud=new XMLHttpRequest();
            datos.append("id",barcode);
            solicitud.addEventListener("load",contdiv,true);
            solicitud.open("POST","<?php echo $this->baseUrl("/"); ?>/administracion/productos/getproducto",true);
            solicitud.send(datos);
            return false;
        });
        $("#costo").keyup(function (e){
            var precio = (parseFloat($(this).val())*  parseFloat($("#iva").val()) )*   parseFloat($("#multiplicador").val());
            $("#precio").val(precio);
        });
        function contdiv(e){
            var res=e.target.responseText;
            document.getElementById("producto").innerHTML=res;
           // $(".chzn-select").chosen();//este es para que ponga la busqueda en el select(nombre de la clase)
           // $(".datatable-static").dataTable(); ///////este es para que ponga el paginador(nombre de la clase)
        }
    });
</script>




